@model AllData

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <p>
        <a asp-action="Create">Create New Movie</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies.FirstOrDefault().ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies.FirstOrDefault().Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Movies" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <p>
        <a asp-action="Create">Create New User</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/pages/home_index.js"></script>
}